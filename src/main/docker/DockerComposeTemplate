version: "3.1"
services:
  spring-boot-docker:
    image: lfallo1/websocket-demo:${gitCommit}
    restart: always
    ports:
      - "8080:8080"
    links:
      - postgres:postgres
    depends_on:
      - postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: production_secret
      SPRING_PROFILES_ACTIVE: prod
  postgres:
    image: postgres
    restart: always
    ports:
      - "5433:5432"
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: production_secret
      POSTGRES_DB: TranscribeDb
    volumes:
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql